# =========================
# Unity 3D .gitignore
# =========================

# Ignore temp and cache folders
[Ll]ibrary/
[Tt]emp/
[Oo]bj/
[Bb]uild/
[Bb]uilds/
[Ll]ogs/
[Mm]emoryCaptures/

# Asset meta data should only be ignored when the corresponding asset is also ignored
# Never ignore .meta files inside the Assets folder!
!/[Aa]ssets/**/*.meta

# Autogenerated VS/JetBrains Rider files
.vs/
.vscode/
.idea/
*.csproj
*.unityproj
*.sln
*.suo
*.tmp
*.user
*.userprefs
*.pidb
*.booproj

# Unity cache
UserSettings/
# Unity Addressables build path
/[Aa]ssets/[Aa]ddressable[Aa]ssets[Dd]ata/*/catalog.json
/[Aa]ssets/[Aa]ddressable[Aa]ssets[Dd]ata/*/catalog.hash
/[Aa]ssets/[Aa]ddressable[Aa]ssets[Dd]ata/*/assetlink.hash
/[Aa]ssets/[Aa]ddressable[Aa]ssets[Dd]ata/*/assetlink.bin

# Gradle cache and build output (Android)
.gradle/
exportedObj/
*.apk
*.aab
*.obb

# iOS build artifacts
DerivedData/
xcuserdata/
*.xcuserstate
*.xcworkspace

# Crashlytics and analytics files
crashlytics-build.properties
fabric.properties

# Auto-generated Android/iOS/Build folders
/[Bb]uilds/
/[Bb]uild/
/[Ll]ogs/

# Rider / JetBrains
.idea/
*.iml

# Unity Cloud Build
/[Uu]serSettings/

# TextMesh Pro auto-generated assets
/[Aa]ssets/TextMesh*Pro/Resources/Fonts & Materials/LiberationSans SDF.asset

# Platform-specific
*.swp
*.bak
*.orig
*.tmp

# Other
.DS_Store
Thumbs.db
desktop.ini

# Exclude Addressable local builds
/[Aa]ssets/[Aa]ddressable[Aa]ssets[Dd]ata/*/addressables_content_state.bin

# Collaborate files
/[Uu]serSettings/Layouts/
